{% extends 'base.html.twig' %}

{% block title %}Donations List{% endblock %}
{% block maintitle %}Donations List{% endblock %}

{% block body %}
 	<div class="card">

		<div class="card-header">
          <a class="btn btn-primary float-right" href="{{ path('donation_new') }}">Create new</a>
			<h3 class="card-title">
				Donations List(Total:{{donations.getTotalItemCount}})
			</h3>
			<div class="card-tools">
			
			</div>
		</div>
		<div class="card-body">
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Donor</th>
                <th>Recipient</th>
                <th>Donation Center</th>
                <th>Processed At</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for donation in donations %}
            <tr>
                <td>{{ donation.id }}</td>
                <td>{{ donation.donor }}</td>
                <td>{{ donation.recipient }}</td>
                <td>{{ donation.donationCenter }}</td>
                <td>{{ donation.processedAt ? donation.processedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('donation_show', {'id': donation.id}) }}">show</a>
                    {# <a href="{{ path('donation_edit', {'id': donation.id}) }}">edit</a> #}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
		<div class="float-right" id="custompaginator">{{ knp_pagination_render(donations) }}</div>
	</div>
{% endblock %}
